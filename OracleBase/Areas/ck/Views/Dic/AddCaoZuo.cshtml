
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using OracleBase.Models
@model C_TB_CODE_CAOZUO

<form class="form-horizontal m-t" id="form1" novalidate="novalidate">
    @Html.HiddenFor(n => Model.ID)
    
    <div class="form-group">
        <label class="col-sm-3 control-label">编码：</label>
        <div class="col-sm-8">
            <input id="Code" name="Code" type="text" class="form-control" value="@Model.CODE" maxlength="50"  required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">名称：</label>
        <div class="col-sm-8">
            <input id="NAME" name="NAME" value="@Model.NAME" maxlength="50" type="text" class="form-control" required="" aria-required="true">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">显示名称：</label>
        <div class="col-sm-8">
            <input id="DISPLAYNAME" name="DISPLAYNAME" type="text" class="form-control" value="@Model.DISPLAYNAME" maxlength="50"  required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">CODE_OPBTYPE：</label>
        <div class="col-sm-8">
            <input id="CODE_OPBTYPE" name="CODE_OPBTYPE" type="text" class="form-control" value="@Model.CODE_OPBTYPE" maxlength="50"  required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">CODE_CARRIER_S：</label>
        <div class="col-sm-8">
            <input id="CODE_CARRIER_S" name="CODE_CARRIER_S" type="text" class="form-control" value="@Model.CODE_CARRIER_S" maxlength="50"  required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">CODE_CARRIER_E：</label>
        <div class="col-sm-8">
            <input id="CODE_CARRIER_E" name="CODE_CARRIER_E" type="text" class="form-control" value="@Model.CODE_CARRIER_E" maxlength="50"  required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-3">
            @{
                if (Model.ID == 0)
                {
                    <button class="btn btn-primary" type="button" onclick="AddData('C_TB_CODE_CAOZUO')">添加</button>
                }
                else
                {
                    <button class="btn btn-primary" type="button" onclick="Edit('C_TB_CODE_CAOZUO')">保存</button>
                }
            }
        </div>
    </div>
</form>