                            <input type="text" class="form-control" id="HuoZhu" placeholder="货主">
                        </div>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="ShipName" placeholder="船名">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="VGNO" placeholder="航次">
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                <button type="button" id="btn_query" class="btn btn-sm btn-primary" onclick="Serach()">查询</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function changeDateFormat(cellval) {
        var dateVal = cellval + "";
        if (cellval != null) {
            var date = new Date(parseInt(dateVal.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }
    }
    var TableInit = function () {
        var oTableInit = new Object();
        //初始化Table
        oTableInit.Init = function () {
            $('#table').bootstrapTable({
                url: '/DataTable/GetWeiKaiPiaoList', //请求后台的URL（*）
                method: 'get', //请求方式（*）
                toolbar: '#toolbar', //工具按钮用哪个容器
                striped: true, //是否显示行间隔色
                cache: false, //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true, //是否显示分页（*）
                sortable: true, //是否启用排序
                sortOrder: "asc", //排序方式
                queryParams: oTableInit.queryParams, //传递参数（*）
                sidePagination: "server", //分页方式：client客户端分页，server服务端分页（*）
                pageNumber: 1, //初始化加载第一页，默认第一页
                pageSize: 10, //每页的记录行数（*）
                pageList: [10, 25, 50, 100], //可供选择的每页的行数（*）
                search: false, //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                strictSearch: false,
                showColumns: true, //是否显示所有的列
                showRefresh: true, //是否显示刷新按钮
                minimumCountColumns: 2, //最少允许的列数
                clickToSelect: true, //是否启用点击选中行
                // height: $(window).height() - 30,
                uniqueId: "ID", //每一行的唯一标识，一般为主键列
                showToggle: false, //是否显示详细视图和列表视图的切换按钮
                cardView: false, //是否显示详细视图
                detailView: false, //是否显示父子表
                showExport: true,  //是否显示导出按钮
                buttonsAlign: "right",  //按钮位置
                exportTypes: ['excel'],  //导出文件类型
                Icons: 'glyphicon-export',
                exportOptions: {

                    fileName: '总台帐报表',  //文件名称设置
                    worksheetName: 'sheet1',  //表格工作区名称
                    tableName: '总台帐报表',
                    excelstyles: ['background-color', 'color', 'font-size', 'font-weight'],

                },
                onLoadSuccess: function (data) {
                    var DuiCunFei1 = 0.0;
                    var YunFei1 = 0.0;
                    var GuoBangFei1 = 0.0;
                    var BaoGanFei1 = 0.0;
                    var QiTa1 = 0.0;
                    var HeJi1 = 0.0;
                    for (var o in data.rows) {
                        if (data.rows.hasOwnProperty(o)) {
                            var DuiCunFei = parseFloat(data.rows[o].DuiCunFei);
                            var YunFei = parseFloat(data.rows[o].YunFei);
                            var GuoBangFei = parseFloat(data.rows[o].GuoBangFei);
                            var BaoGanFei = parseFloat(data.rows[o].BaoGanFei);
                            var QiTa = parseFloat(data.rows[o].QiTa);
                            var HeJi = parseFloat(data.rows[o].HeJi);
                            if (DuiCunFei < 0) {
                                DuiCunFei = 0;
                            }
                            if (YunFei < 0) {
                                YunFei = 0;
                            }
                            if (GuoBangFei < 0) {
                                GuoBangFei = 0;
                            }
                            if (BaoGanFei < 0) {
                                BaoGanFei = 0;
                            }
                            if (QiTa < 0) {
                                QiTa = 0;
                            }
                            if (HeJi < 0) {
                                HeJi = 0;
                            }
                            DuiCunFei1 += parseFloat(DuiCunFei);
                            YunFei1 += parseFloat(YunFei);
                            GuoBangFei1 += parseFloat(GuoBangFei);
                            BaoGanFei1 += parseFloat(BaoGanFei);
                            QiTa1 += parseFloat(QiTa);
                            HeJi1 += parseFloat(HeJi);
                        }
                    }
                    var rows = [];
                    rows.push({
                        DanWei: "合计",
                        HuoZhong: "",
                        ChuanMing: "",
                        HangCi: "",
                        TiDanHao: "",
                        DuiCunFei: DuiCunFei1.toFixed(3),
                        YunFei: YunFei1.toFixed(3),
                        DuiCunFei: DuiCunFei1.toFixed(3),
                        GuoBangFei: GuoBangFei1.toFixed(3),
                        BaoGanFei: BaoGanFei1.toFixed(3),
                        QiaTaFeiYong: QiTa1.toFixed(3),
                        HeJi: HeJi1.toFixed(3),

                    });
                    $('#table').bootstrapTable('append', rows);
                },
                columns: [

                    {
                        field: 'DanWei',
                        title: '单位',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll

                    },
                    {
                        field: 'HuoZhong',
                        title: '货种',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                    },
                    {
                        field: 'ChuanMing',
                        title: '船名',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'HangCi',
                        title: '航次',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'TiDanHao',
                        title: '提单号',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'BaoGanFei',
                        title: '包干费',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'DuiCunFei',
                        title: '堆存费',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'YunFei',
                        title: '运输费',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'GuoBangFei',
                        title: '过磅费',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'QiaTaFeiYong',
                        title: '其他费用',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'HeJi',
                        title: '合计',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },




                ],

                formatLoadingMessage: function () {
                    return "请稍等，正在加载中。。。";
                }
            });
        };

        //得到查询的参数
        oTableInit.queryParams = function (params) {
            var temp = {
                limit: params.limit, //页面大小
                offset: params.offset, //页码
                GBNO: $("#GBNO").val(),
                C_GOODSAGENT_NAME: $("#C_GOODSAGENT_NAME").val(),
                CreatTime: $("#CreatTime").val(),
                CreatTime1: $("#CreatTime1").val(),
                BLNO: $("#BLNO").val(),
                C_GOODS: $("#C_GOODS").val(),
                HuoZhu: $("#HuoZhu").val(),
                ShipName: $("#ShipName").val(),
                VGNO: $("#VGNO").val()
            };
            return temp;
        };
        return oTableInit;
    };



