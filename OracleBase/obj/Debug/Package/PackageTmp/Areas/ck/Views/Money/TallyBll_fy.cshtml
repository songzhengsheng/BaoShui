
@{
    ViewBag.Title = "理货单费用详情";
    Layout = "~/Views/Shared/_LayoutBootstrapTable.cshtml";
}
<script src="~/Content/layer/layer.js"></script>
<script src="~/Content/bootstraptableedu/bootstrap-table-export.js"></script>
<script src="~/Content/bootstraptableedu/tableExport.js"></script>
<script src="~/Content/My97DatePicker/WdatePicker.js"></script>
<input type="hidden" class="form-control" id="id" value="@ViewBag.id">
<div class="panel-body">
    <table id="table"></table>
</div>
<script type="text/javascript">
    var TableInit = function () {
        var oTableInit = new Object();
        //初始化Table
        oTableInit.Init = function () {
            $('#table').bootstrapTable({
                url: '/Money/GetTallyBllList_fy', //请求后台的URL（*）
                method: 'get', //请求方式（*）
                toolbar: '#toolbar', //工具按钮用哪个容器
                striped: true, //是否显示行间隔色
                cache: false, //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true, //是否显示分页（*）
                sortable: true, //是否启用排序
                sortOrder: "asc", //排序方式
                queryParams: oTableInit.queryParams, //传递参数（*）
                sidePagination: "server", //分页方式：client客户端分页，server服务端分页（*）
                pageNumber: 1, //初始化加载第一页，默认第一页
                pageSize: 10, //每页的记录行数（*）
                pageList: [10, 25, 10000], //可供选择的每页的行数（*）
                search: false, //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                strictSearch: false,
                showColumns: true, //是否显示所有的列
                showRefresh: true, //是否显示刷新按钮
                minimumCountColumns: 2, //最少允许的列数
                clickToSelect: true, //是否启用点击选中行
                // height: $(window).height() - 30,
                uniqueId: "ID", //每一行的唯一标识，一般为主键列
                showToggle: false, //是否显示详细视图和列表视图的切换按钮
                cardView: false, //是否显示详细视图
                detailView: false, //是否显示父子表

                showExport: true,  //是否显示导出按钮
                buttonsAlign: "right",  //按钮位置
                exportTypes: ['excel'],  //导出文件类型
                Icons: 'glyphicon-export',
                exportOptions: {
                    ignoreColumn: [0, 1],  //忽略某一列的索引
                    fileName: '总台帐报表',  //文件名称设置
                    worksheetName: 'sheet1',  //表格工作区名称
                    tableName: '总台帐报表',
                    excelstyles: ['background-color', 'color', 'font-size', 'font-weight'],

                },

                columns: [
                    {
                        field: 'DanJia',
                        title: '单价',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    },
                    {
                        field: 'ShuLiang',
                        title: '数量',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'FMZhongLei',
                        title: '费目种类',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: function (value, row, index) {
                            if (row.JiLiangDanWei.indexOf("*天") > 0) {
                                if (row.Type == "进库" || row.Type == "出库") {
                                    return '<a  onclick="chakan_dc(\'' + row.ID + '\')">' + row.FMZhongLei + '</a>';
                                }
                                else {
                                    return '<a  onclick="chakan_dc_k(\'' + row.ID + '\')">' + row.FMZhongLei + '</a>';
                                }
                            }
                            else {
                                return '' + row.FMZhongLei + '';
                            }
                        }
                    },
                    {
                        field: 'JiLiangDanWei',
                        title: '计量单位',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    },
                   
                    {
                        field: 'MianCunQi',
                        title: '免堆存期（天）',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'FeiYong',
                        title: '费用金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'KaiPiaoJinE',
                        title: '开票金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'KaiPiaoShuiHou',
                        title: '开票税后金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'WeiKaiPiaoJinE',
                        title: '未开票金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'WeiKaiPiaoShuiHou',
                        title: '未开票税后金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'LaiKuanJinE',
                        title: '来款金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'WaiFuJinE',
                        title: '外付金额',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                    ,
                    {
                        field: 'WaiFuJinE',
                        title: '开票单位',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        },
                        formatter: tdShowAll
                    }
                  
                   
                ]

            });
        };
        //得到查询的参数
        oTableInit.queryParams = function (params) {
            var temp = {
                limit: params.limit, //页面大小
                offset: params.offset, //页码
                id: $("#id").val(),
            };
            return temp;
        };
        return oTableInit;
    };


    function chakan_dc(id) {
        //layer.open({
        //    type: 2,
        //    title: "查看费用详情",
        //    shadeClose: true,
        //    shade: 0.8,
