
@{
    ViewBag.Title = "仓单列表";

    Layout = "~/Views/Shared/_LayoutBootstrapTable.cshtml";
}
<script src="~/Content/layer/layer.js"></script>
<style>
        .table_list_box {
            table-layout: fixed !important;
        }
    </style>
<div class="panel-body">
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-primary" onclick="Add('@ViewBag.GoodsBillId')">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
   
    </div>
    <table id="table" class="table table-striped table_list"></table>

</div>
<script>
        var TableInit = function () {
        var oTableInit = new Object();
        //初始化Table
        oTableInit.Init = function () {
            $('#table').bootstrapTable({
                url: '/BsYeWuWeiTuo/GetCangDanList', //请求后台的URL（*）
                method: 'get', //请求方式（*）
                toolbar: '#toolbar', //工具按钮用哪个容器
                striped: true, //是否显示行间隔色
                cache: false, //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true, //是否显示分页（*）
                sortable: true, //是否启用排序
                sortOrder: "asc", //排序方式
                queryParams: oTableInit.queryParams, //传递参数（*）
                sidePagination: "server", //分页方式：client客户端分页，server服务端分页（*）
                pageNumber: 1, //初始化加载第一页，默认第一页
                pageSize: 10, //每页的记录行数（*）
                pageList: [10, 25, 50, 100], //可供选择的每页的行数（*）
                search: false, //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                strictSearch: false,
                showColumns: false, //是否显示所有的列
                showRefresh: false, //是否显示刷新按钮
                minimumCountColumns: 2, //最少允许的列数
                clickToSelect: true, //是否启用点击选中行
                height: $(window).height() - 30,
                uniqueId: "ID", //每一行的唯一标识，一般为主键列
                showToggle: false, //是否显示详细视图和列表视图的切换按钮
                cardView: false, //是否显示详细视图
                detailView: false, //是否显示父子表
                columns: [
                    {
                        field: 'ID',
                        width: 100,
                        title: '操作',
                        formatter: function (value, row, index) {
                            if (row.BoolHuiShou != "是") {
                                if (row.State != "仓单提货已确认") {
                                    return '<div  class="btn-group"><button data-toggle="dropdown" class="btn btn-success btn-sm dropdown-toggle" aria-expanded="false">操作 <span class="caret"></span></button><ul class="dropdown-menu"><li><a  onclick="Del(\'' + row.Guid + '\')">删除</a></li><li><a  onclick="Edu(\'' + row.Guid + '\')">编辑</a></li><li><a  onclick="cdhs(\'' + row.Guid + '\')">仓单回收</a></li><li><a  onclick="cdth(\'' + row.Guid + '\')">仓单提货确认</a></li></ul></div>'
                                }
                                else {
                                    return '<div  class="btn-group"><button data-toggle="dropdown" class="btn btn-success btn-sm dropdown-toggle" aria-expanded="false">操作 <span class="caret"></span></button><ul class="dropdown-menu"><li><a  onclick="cdhs(\'' + row.Guid + '\')">仓单回收</a></li></ul></div>'
                                }
                            }
                            else {
                                return '';
                            }
                        }

                    },
               
                    {
                        field: 'CangDanHao',
                        title: '仓单号',
                    },
                    {
                        field: 'TaiTouRen',
                        title: '抬头人',
                    },
                 
                    {
                        field: 'MaiTou',
                        title: '唛头',
                       
                    },
                    {
                        field: 'PingMing',
                        title: '品名',
                       
                    },
                    {
                        field: 'BoolHuiShou',
                        title: '仓单回收标志',

                    },
                    {
                        field: 'State',
                        title: '状态',

                    }
                ],

                formatLoadingMessage: function () {
                    return "请稍等，正在加载中。。。";
                }
            });
        };

        //得到查询的参数
        oTableInit.queryParams = function (params) {
            var temp = {
                limit: params.limit, //页面大小
                offset: params.offset, //页码
                GoodsBillId: '@ViewBag.GoodsBillId',

            };
            return temp;
        };
        return oTableInit;
    };
        //删除
        function Del(guid) {
            swal({
                title: "您确定要删除这条信息吗",
                text: "删除后将无法恢复，请谨慎操作！",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "删除",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: 'POST',
                    url: '/ck/BsYeWuWeiTuo/DelCangDanById',
                    data: { guid: guid },
                    dataType: 'json',
                    success: function (data, textStatus) {
                     
                        if (data.state == "success") {
                            swal("删除成功！", "您已经永久删除了这条信息。", "success");
                            Serach();

                        } else {
                            swal("删除失败！", "请联系管理员。", "error");

                        }
                    },
                    error: function (xmlHttpRequest, textStatus, errorThrown) {
                    }
                });


            });

    }

    function Add(id) {
        parent.layer.open({
            type: 2,
            title: "新增仓单信息",
            shadeClose: true,
            shade: 0.8,
            area: ['90%', '90%'],
            content: "/ck/BsYeWuWeiTuo/Add_C_CangDan?id=" + id,
            btn: ['关闭'],

            end: function () {
                Serach();
            }
        });
    }
    function Edu(guid) {
        parent.layer.open({
                type: 2,
                title: "编辑仓单信息",
                shadeClose: true,
                shade: 0.8,
                area: ['90%', '90%'],
                content: "/ck/BsYeWuWeiTuo/Add_C_CangDan?id=0&&guid=" + guid,
                btn: ['关闭'],
                //yes: function (index) {
                //    layer.close(index);
                //},
                end: function () {
                    Serach();
                }
        });
 
    }
    function fangxing(guid) {
        layer.open({
            type: 2,
            title: "报关放行信息",
            shadeClose: true,
            shade: 0.8,
            area: ['80%', '80%'],
            content: "/ck/BsYeWuWeiTuo/Add_C_BaoGuanFangXing?id=0&&guid=" + guid,
            btn: ['关闭'],
            yes: function (index) {
                layer.close(index);
            },
            end: function () {
                Serach();
            }
        });

    }
    function cdhs(id) {
        swal({
            title: "您确定要回收这条信息吗",
            text: "审核后将改变此条数据将变为仓单已回收状态，请谨慎操作！",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "仓单回收",
            closeOnConfirm: false
        }, function () {
            $.ajax({
                type: 'POST',
                url: '/ck/BsYeWuWeiTuo/cdhs',
                data: { ID: id },
                dataType: 'json',
                success: function (data, textStatus) {
                    data = eval('(' + data + ')');
                    if (data.state == "success") {
                        swal("操作成功！", "您已经成功回收了此条数据。", "success");
                        Serach();

                    } else {
                        swal("操作失败！", "请联系管理员。", "error");

                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                }
            });


        });

    }
    function cdth(id) {
        swal({
            title: "您确定要审核这条信息吗",
            text: "完成后将改变此条数据将变为仓单提货已确认状态，请谨慎操作！",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "审核",
            closeOnConfirm: false
        }, function () {
            $.ajax({
                type: 'POST',
                url: '/ck/BsYeWuWeiTuo/shenheCdth',
                data: { ID: id },
                dataType: 'json',
                success: function (data, textStatus) {
                    data = eval('(' + data + ')');
                    if (data.state == "success") {
                        swal("操作成功！", "您已经成功审核了此条数据。", "success");
                        Serach();

                    } else {
                        swal("操作失败！", "请联系管理员。", "error");

                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                }
            });


        });

    }
</script>






<link href="~/Content/hplus/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">

<script src="~/Content/hplus/js/plugins/sweetalert/sweetalert.min.js"></script>

<script>
    $(function () {
        parent.layer.closeAll();
    });
</script>