<script type="text/javascript">
    function changeDateFormat(cellval) {
        var dateVal = cellval + "";
        if (cellval != null) {
            var date = new Date(parseInt(dateVal.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }
    }
    var TableInit = function () {
        var oTableInit = new Object();
        //初始化Table
        oTableInit.Init = function () {
            $('#table').bootstrapTable({
                url: '/Money/GetGOODSBILLList', //请求后台的URL（*）
                method: 'get', //请求方式（*）
                toolbar: '#toolbar', //工具按钮用哪个容器
                striped: true, //是否显示行间隔色
                cache: false, //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true, //是否显示分页（*）
                sortable: true, //是否启用排序
                sortOrder: "asc", //排序方式
                queryParams: oTableInit.queryParams, //传递参数（*）
                sidePagination: "server", //分页方式：client客户端分页，server服务端分页（*）
                pageNumber: 1, //初始化加载第一页，默认第一页
                pageSize: 10, //每页的记录行数（*）
                pageList: [10, 25, 50, 100], //可供选择的每页的行数（*）
                search: false, //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                strictSearch: false,
                showColumns: true, //是否显示所有的列
                showRefresh: true, //是否显示刷新按钮
                minimumCountColumns: 2, //最少允许的列数
                clickToSelect: true, //是否启用点击选中行
                // height: $(window).height() - 30,
                uniqueId: "ID", //每一行的唯一标识，一般为主键列
                showToggle: false, //是否显示详细视图和列表视图的切换按钮
                cardView: false, //是否显示详细视图
                detailView: false, //是否显示父子表
                onLoadSuccess: function (data) {
                    var kunCun = 0.0;
                    var kunCunW = 0.0;
                    for (var o in data.rows) {
                        if (data.rows.hasOwnProperty(o)) {
                            var zKunCun = parseFloat(data.rows[o].KunCun);
                            var zKunCunW = parseFloat(data.rows[o].KunCunW);
                            if (zKunCun < 0) {
                                zKunCun = 0;
                            }
                            if (zKunCunW < 0) {
                                zKunCunW = 0;
                            }
                            kunCun += parseFloat(zKunCun);
                            kunCunW += parseFloat(zKunCunW);
                        }
                    }
                    var rows = [];
                    rows.push({
                        GBNO: "",
                        ContoractNumber: "",
                        C_GOODSAGENT_NAME: "",
                        C_GOODS: "",
                        ShipName: "",
                        VGNO: "",
                        PLANAMOUNT: "",
                        PLANWEIGHT: "",
                        PLANWEIGHT: "",
                        MARK: "",
                        CreatPeople: "",
                        State: "",
                        HuoZhu: "",
                        PLANWEIGHT: "合计",
                        KunCun: kunCun.toFixed(3),
                        KunCunW: kunCunW.toFixed(3),
                    });
                    $('#table').bootstrapTable('append', rows);
                },
                columns: [              
                    {
                      
                        field: 'GBNO',
                        title: '票货编码',
                        formatter: function (value, row, index) {
                            return '<a  onclick="chakan(\'' + row.ID + '\')">' + row.GBNO + '</a>';
                        }
                        ,
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                    },
                    //{
                     
                    //    field: 'ContoractNumber',
                    //    title: '合同号',
                    //    formatter: function (value, row, index) {
                    //        var roleId = $("#roleId").val();
                    //        if (roleId != 4) { 
                    //            if (row.ContoractNumber != null) {
                    //                return '<a  onclick="chakan_ht(\'' + row.CONTRACT_Guid + '\')">' + row.ContoractNumber + '</a>';
                    //            }
                    //        }
                          
                           
                    //    }

                    //},
                    {
                        field: 'C_GOODSAGENT_NAME',
                        title: '货代',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll

                    },
                    {
                        field: 'HuoZhu',
                        title: '货主',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                    },
                    {
                        field: 'C_GOODS',
                        title: '货物',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'ShipName',
                        title: '船名',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'VGNO',
                        title: '航次',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    //{
                    //    field: 'PLANAMOUNT',
                    //    title: '计划件数',
                    //    cellStyle: {
                    //        css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                    //    }
                    //    , formatter: tdShowAll
                    //},
                    //{
