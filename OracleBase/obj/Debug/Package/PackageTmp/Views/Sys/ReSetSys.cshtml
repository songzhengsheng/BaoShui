
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<script type="text/javascript">
    function ReSet() {
        swal({
            title: "您确定要初始化系统吗？",
            text: "初始化系统后将无法恢复，请谨慎操作！",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "初始化",
            closeOnConfirm: false
        }, function () {
            $.ajax({
                type: 'POST',
                url: '/Sys/SubmitReSetSys',       
                dataType: 'json',
                success: function (data, textStatus) {
                    data = eval('(' + data + ')');
                    if (data.state == "success") {
                        swal("初始化成功！", "您已经成功初始化系统。", "success");

                    } else {
                        swal("删除失败！", "请联系管理员。", "error");

                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                }
            });


        });

    }

</script>
<form class="form-horizontal m-t" id="form1" novalidate="novalidate">

    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-3">
            <button class="btn btn-primary" type="button" onclick="ReSet()">初始化</button>
        </div>
    </div>
</form>

