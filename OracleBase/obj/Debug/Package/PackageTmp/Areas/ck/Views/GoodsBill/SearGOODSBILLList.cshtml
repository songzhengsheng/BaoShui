                    //    cellStyle: {
                    //        css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                    //    }
                    //    , formatter: tdShowAll
                    //},
                    {
                        field: 'KunCun',
                        title: '库存件数',
                        formatter: function (value, row, index) {
                                return '<a>' + row.KunCun + '</a>';

                            }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'KunCunW',
                        title: '库存重量/材积',
                        formatter: function (value, row, index) {
                                return '<a>' + row.KunCunW + '</a>';
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'MARK',
                        title: '备注',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        width: 110,
                        field: 'CreatTime',
                        title: '建票日期',
                        formatter: function (value, row, index) {
                            return changeDateFormat(value)
                        },
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                    },
                    {
                        field: 'CreatPeople',
                        title: '建票人',
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                        , formatter: tdShowAll
                    },
                    {
                        field: 'State',
                        title: '状态',
                        formatter: function (value, row, index) {
                            if (row.State == "进行中") {
                                
                                return '<span class="label label-danger ">' + value +'</span>';

                            }
                            else if (row.State == "已完成")
                            {
                                return '<span class="label label-primary ">' + value +'</span>';
                            }
                            else {
                                return '<span class="label label-warning ">'+value+'</span>';

                            }
                        },
                        cellStyle: {
                            css: { "text-overflow": "ellipsis", "-moz-text-overflow": "ellipsis", "overflow": "hidden", "white-space": "nowrap" }
                        }
                    }

                ],
           
                formatLoadingMessage: function () {
                    return "请稍等，正在加载中。。。";
                }
            });
        };

        //得到查询的参数
        oTableInit.queryParams = function (params) {
            var temp = {
                limit: params.limit, //页面大小
                offset: params.offset, //页码
                GBNO: $("#GBNO").val(),
                C_GOODSAGENT_NAME: $("#C_GOODSAGENT_NAME").val(),
                CreatTime: $("#CreatTime").val(),
                CreatTime1: $("#CreatTime1").val(),
                BLNO: $("#BLNO").val(),
                C_GOODS: $("#C_GOODS").val(),
                HuoZhu: $("#HuoZhu").val(),
                ShipName: $("#ShipName").val(),
                VGNO: $("#VGNO").val()
            };
            return temp;
        };
        return oTableInit;
    };



