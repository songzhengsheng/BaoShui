
@{
    ViewBag.Title = "AddTRADE";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using OracleBase.Models
@model C_TB_CODE_TRADE
<form class="form-horizontal m-t" id="form1" novalidate="novalidate">
    @Html.HiddenFor(n => Model.ID)
    @{

        if (string.IsNullOrEmpty(Model.creater))
        {
            <input id="creater" type="hidden" class="form-control" value="@ViewBag.creater" maxlength="50" name="creater" required="" aria-required="true">
            <input id="creatTime" type="hidden" class="form-control" value="@ViewBag.creatTime" maxlength="50" name="creatTime" required="" aria-required="true">
        }
        else
        {
            @Html.HiddenFor(n => Model.creater)
            @Html.HiddenFor(n => Model.creatTime)
        }
    }

    <div class="form-group">
        <label class="col-sm-3 control-label">编码：</label>
        <div class="col-sm-8">
            <input id="Code" type="text" class="form-control" value="@Model.Code" maxlength="50" name="Code" required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">名称：</label>
        <div class="col-sm-8">
            <input id="Name" name="Name" value="@Model.Name" maxlength="50" type="text" class="form-control" required="" aria-required="true">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label">速记码：</label>
        <div class="col-sm-8">
            <input id="Sjm" type="text" class="form-control" value="@Model.Sjm" maxlength="50" name="Sjm" required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">备注：</label>
        <div class="col-sm-8">
            <input id="ReMark" type="text" class="form-control" value="@Model.ReMark" maxlength="50" name="ReMark" required="" aria-required="true">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-3">
            @{
                if (Model.ID == 0)
                {
                    <button class="btn btn-primary" type="button" onclick="AddData('C_TB_CODE_TRADE')">添加</button>
                }
                else
                {
                    <button class="btn btn-primary" type="button" onclick="Edit('C_TB_CODE_TRADE')">保存</button>
                }
            }
        </div>
    </div>
</form>