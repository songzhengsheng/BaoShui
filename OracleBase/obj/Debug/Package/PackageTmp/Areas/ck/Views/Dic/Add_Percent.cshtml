
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using OracleBase.Models
@model C_PERCENT

<form class="form-horizontal m-t" id="form1" novalidate="novalidate">

    @Html.HiddenFor(n => Model.ID)
    <div class="form-group">
        <label class="col-sm-3 control-label">货物名称：</label>
        <div class="col-sm-8">
            @Html.DropDownList("GoodsName", (SelectList)ViewData["Goods_List"], new { @class = "form-control required" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">提醒百分比：</label>
        <div class="col-sm-8">
            <input id="Percent" name="Percent" value="@Model.Percent" maxlength="50" type="text" class="form-control number" required="" aria-required="true">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-3">
            @{
                if (Model.ID == 0)
                {
                    <button class="btn btn-primary" type="button" onclick="AddData('C_PERCENT')">添加</button>
                }
                else
                {
                    <button class="btn btn-primary" type="button" onclick="Edit('C_PERCENT')">保存</button>
                }
            }
        </div>
    </div>
</form>